{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug vdec",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/vdec/vdec",  // Adjust this path to match your target executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // Adjust this path if necessary
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build vdec",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}